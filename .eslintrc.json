{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {

    "prettier/prettier": ["error"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["__test__/**"],
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ]
  },
  "env": {
    "jest": true
  }
}
